{
    "manifest_version": 3,
    "name": "shortLnk",
    "version": "1.0",
    "action": {
        "default_popup": "./src/popup.html",
        "default_icon": "./logo2.png"
    },
    "permissions": [],
    "content_scripts": [
        {
            "js": [
                "./src/content/index.js"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        },
        {
            "css": [
                "./src/content/index.css"
            ],
            "matches": [
                "http://*/*",
                "https://*/*"
            ]
        }
    ]
}